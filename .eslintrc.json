{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-lines": [1, {
            "max": 80,
            "skipBlankLines": true,
            "skipComments": true
        }],
        "semi": 1,
        "quotes": [1, "double"],
        "curly": [1, "all"],
        "default-case": 1,
        "eqeqeq": 1,
        "max-classes-per-file": [1, 1],
        "require-await": 1,
        "max-params": [1, 4],
        "block-spacing": 1
    }
}
