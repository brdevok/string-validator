{
    "compilerOptions": {
      "target": "es5",                          
      "module": "esnext",   
      "strict": true,
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist/esm",
      "downlevelIteration": true,
      "typeRoots": [
        "src/types",
        "node_modules/@types"
      ]
    },
    "include": [
        "src", "src/types",   
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}